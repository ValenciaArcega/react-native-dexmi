{
  "expo": {
    "name": "Dexmi",
    "slug": "Dexmi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.jvcode.dexmi",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSCameraUsageDescription": "Permitir a Dexmi acceder a tu cámara",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Permitir a Dexmi acceder a tu ubicación",
        "NSLocationAlwaysUsageDescription": "Permitir a Dexmi acceder a tu ubicación",
        "NSLocationWhenInUseUsageDescription": "Permitir a Dexmi acceder a tu ubicación",
        "NSMicrophoneUsageDescription": "Permitir a Dexmi acceder a tu micrófono",
        "NSPhotoLibraryUsageDescription": "Permitir a Dexmi acceder a tus fotos"
      }
    },
    "android": {
      "package": "com.jvcode.dexmi",
      "softwareKeyboardLayoutMode": "pan",
      "userInterfaceStyle": "automatic",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ]
  }
}